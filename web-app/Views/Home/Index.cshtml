    <div id="rootChatIcon" role="img" aria-label="SuperJeweler logo" class="chatIcon__chatIcon___7jaa5" data-kt="chat-icon">
    </div>
</div>

<script>
    const chatIcon = document.getElementById('rootChatIcon');
    const chatIframe = document.getElementById('chat-iframe-container');

    chatIcon.addEventListener('click', () => {
      chatIframe.style.display = chatIframe.style.display === 'block' ? 'none' : 'block';
    });
</script>



